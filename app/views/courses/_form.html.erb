<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :department_id %>
    <%= form.collection_select :department_id, Department.all, :id, :name %>
    <%#= form.text_field :department_id %>
  </div>

  <div class="field">
    <%= form.label :"Course Number" %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :"Credit Hours" %>
    <%= form.select :hours, options_for_select(1..5) %>
    <%#= form.collection_select :hours, collection: 1..5, :id, :collection %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

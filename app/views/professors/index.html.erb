<p id="notice"><%= notice %></p>

<h1>Professors</h1>

<%= form_tag professors_path, :method => "get" do %>
  <%= label_tag(:search, "Whats the NAME of the PROFESSOR would you like to search for:") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :name=> nil) %>
<% end %>

<br>
<hr>
<br>

<table>
  <thead>
    <tr>
      <th>Professor Name</th>
      <th>Office Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= professor.office %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path %>

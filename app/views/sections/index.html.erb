<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag sections_path, :method => "get" do %>
  <%= label_tag(:search, "Search sections by PROFESSOR name:") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :name=> nil) %>
<% end %>

<br>
<hr>
<br>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Course</th>
      <th>Professor</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.year %></td>
        <td><%= section.course.department.name %> <%= section.course.number %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.semester.semester %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
